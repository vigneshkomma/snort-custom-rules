# 1. Connection Monitoring
alert tcp any any -> $HOME_NET 22 (msg:"SSH Connection Established"; flow:to_server,established; sid:1000001; rev:1;)

# 2. Stealth Reconnaissance (SYN Scan)
alert tcp any any -> $HOME_NET 22 (msg:"SSH Port Scan (SYN)"; flags:S; threshold:type both, track by_src, count 5, seconds 60; sid:1000002; rev:1;)

# 3. Version/Banner Grabbing
alert tcp any any -> $HOME_NET 22 (msg:"SSH Banner Grab/Version Discovery"; flow:to_server,established; content:"SSH-"; depth:4; sid:1000003; rev:1;)

# 4. Brute Force Attempt (Multiple Connection Retries)
alert tcp any any -> $HOME_NET 22 (msg:"SSH Brute Force Attempt"; flags:S; flow:to_server; detection_filter:track by_src, count 5, seconds 60; sid:1000004; rev:1;)

# 5. Evasion Scan (Xmas Tree)
alert tcp any any -> $HOME_NET 22 (msg:"SSH Xmas Scan Attempt"; flags:FPU; sid:1000005; rev:1;)

# 6. Evasion Scan (Null)
alert tcp any any -> $HOME_NET 22 (msg:"SSH Null Scan Attempt"; flags:0; sid:1000006; rev:1;)
